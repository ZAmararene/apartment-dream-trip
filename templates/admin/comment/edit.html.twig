{% extends 'admin/base.html.twig' %}

{% block title %}Modification du commentaire n°{{ comment.id }}{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <p><a href="{{ path('admin_comment_index') }}" class="fil-arian">Commentaires</a> > Modifier un commentaire</p>
        </div>

        <h1 class="my-5">Modificatuion du commentaire n° {{ comment.id }}</h1>
        <div class="alert alert-info clearfix">
            <p><strong>Annonce liée : </strong>{{ comment.ad.title }}</p>
            <p><strong>Auteur : </strong>{{ comment.author.fullName }}</p>
            <p><strong>Date de création : </strong>{{ comment.createdAt | date('d/m/Y') }}</p>
            <p><strong>Note donnée : </strong>{{ comment.rating }}</p>

            {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary float-right my-3">
                    <i class="fas fa-check"></i>
                    Enregistrer les modifications
                </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}