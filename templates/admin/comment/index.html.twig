{% extends 'admin/base.html.twig' %}

{% block title %}Administration des commentaires{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5">Administration des commentaires</h1>

        <table class="table table-striped">
            <thead>
                <tr class="bg-secondary">
                    <th>Id</th>
                    <th>Date</th>
                    <th>Auteur</th>
                    <th>Commentaire</th>
                    <th>Note</th>
                    <th>Annonce</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in pagination.data %}
                    <tr>
                        <td>{{ comment.id }}</td>
                        <td class="text-center">{{ comment.createdAt | date('d/m/Y H:i') }}</td>
                        <td>
                            <img src="{{ comment.author.picture }}" class="avatar avatar-mini mr-2" alt="Avatar de {{ comment.author.fullName }}">
                            <span class="">{{ comment.author.fullName }}</span>
                        </td>
                        <td>{{ comment.content }}</td>
                        <td class="text-center">
                        <span class="badge badge-dark">
                            {{ comment.rating }}
                        </span>
                        </td>
                        <td>{{ comment.ad.title }}</td>
                        <td class="text-center">
                            <a href="{{ path('admin_comment_edit', {'id' : comment.id}) }}" class="btn btn-primary mb-2">
                                <i class="fas fa-pen"></i>
                            </a>
                            <a href="{{ path('admin_comment_delete', {'id' : comment.id}) }}" class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <hr>
        {{ pagination.display() }}
    </div>

{% endblock %}
