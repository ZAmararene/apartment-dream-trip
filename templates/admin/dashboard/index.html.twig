{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row my-5">
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <div class="card-body d-flex align-items-center justify-content-center">
                        <div class="media position-relative">
                            <i class="fas fa-users fa-2x"></i>
                            <div class="media-body ml-3">
                                <h4 class="card-title">{{ stats.users }} utilisateurs</h4>
                            </div>
                        </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="media position-relative">
                        <i class="fas fa-hotel fa-2x"></i>
                        <div class="media-body ml-3">
                            <h4 class="card-title">{{ stats.ads }} annonces</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="media position-relative">
                        <i class="fas fa-folder fa-2x"></i>
                        <div class="media-body ml-3">
                            <h4 class="card-title">{{ stats.bookings }} réservations</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <div class="card-body d-flex align-items-center justify-content-center">
                    <div class="media position-relative">
                        <i class="fas fa-comments fa-2x"></i>
                        <div class="media-body ml-3">
                            <h4 class="card-title">{{ stats.comments }} avis</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="col">
            <div class="alert alert-success">
                <h2 class="alert-heading my-3 text-center">
                    <i class="fas fa-arrow-up"></i>
                    Les annonces populaires
                </h2>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in bestAds %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <div class="media position-relative">
                                            <img src="{{ ad.picture }}" alt="" class="avatar avatar-mini mr-2">
                                            <div class="media-body mt-2">
                                                {{ ad.firstName }} {{ ad.lastName }}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-dark">
                                            {{ ad.note | number_format(1, ',', '') }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="alert alert-danger">
                <h2 class="alert-heading my-3 text-center">
                    <i class="fas fa-arrow-down"></i>
                    Les annonces impopulaires
                </h2>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Annonce</th>
                                <th>Propriétaire</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ad in worsAds %}
                                <tr>
                                    <td>{{ ad.title }}</td>
                                    <td>
                                        <div class="media position-relative">
                                            <img src="{{ ad.picture }}" alt="" class="avatar avatar-mini mr-2">
                                            <div class="media-body mt-2">
                                                {{ ad.firstName }} {{ ad.lastName }}
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-dark">
                                            {{ ad.note | number_format(1, ',', '') }}
                                        </span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
