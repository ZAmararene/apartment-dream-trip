{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5 text-center">Gestion des utilisateurs</h1>

    <h2 class="mb-3">Administrateurs</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr  class="text-center">
                    <th>Id</th>
                    <th>Administrateur</th>
                    <th>email</th>
                    <th>Introduction</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for admin in admins %}
                {% for user in admin.users %}
                    <tr>
                        <td class="text-center font-weight-bold">{{ user.id }}</td>
                        <td>
                            <div class="media position-relative">
                                <img src="{{ user.picture }}" class="avatar avatar-mini mr-2" alt="Avatar de {{ user.fullName }}">
                                <div class="media-body">
                                    <span>{{ user.fullName }}</span>
                                </div>
                            </div>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.introduction }}</td>
                        <td class="text-justify">{{ user.description | raw }}</td>
                        <td class="text-center">
                            <a href="{{ path('admin_user_edit', {'id' : user.id}) }}" class="link-fa-edit d-flex justify-content-center mb-2">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
            </tbody>
        </table>
    </div>

    <h2 class="mb-3">Utilisateurs</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>Utilistaeur</th>
                    <th>email</th>
                    <th>Introduction</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                    <tr>
                        <td class="text-center font-weight-bold">{{ user.id }}</td>
                        <td>
                            <div class="media position-relative">
                                <img src="{{ user.picture }}" class="avatar avatar-mini mr-2" alt="Avatar de {{ user.fullName }}">
                                <div class="media-body">
                                    <span>{{ user.fullName }}</span>
                                </div>
                            </div>
                        </td>
                        <td>{{ user.email }}</td>
                        <td>{{user.introduction}}</td>
                        <td class="text-justify">{{ user.description | raw}}</td>
                        <td class="text-center">
                            <a href="{{ path('admin_user_edit', {'id' : user.id}) }}" class="link-fa-edit d-flex justify-content-center mb-2">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <hr>

    {{ pagination.display() }}
</div>
{% endblock %}
